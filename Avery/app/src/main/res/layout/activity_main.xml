<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/total"
                style="@style/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Php 62,040.00" />

            <LinearLayout
                android:id="@+id/exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exp_txt"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses: " />

                <TextView
                    android:id="@+id/exp_val"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Php 10,000.00" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inc_txt"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/im_fell_english_sc"
                    android:text="Income: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/inc_val"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Php 50,000.00" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/graph"
            android:layout_width="143dp"
            android:layout_height="78dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/screen_background_dark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView6"
        style="@style/body_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="You have spent too much on food expenses!"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_view" />

    <LinearLayout
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/textView17"
            style="@style/body_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimary"
            android:text="16.09.2020" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <LinearLayout
                android:id="@+id/entries"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food" />

                <TextView
                    android:id="@+id/eqp"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipment" />

                <TextView
                    android:id="@+id/sal"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/values"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fod_val"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-3,000  "
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/eqp_val"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" -200  "
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/sal_val"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+50,000  "
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/warning"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warn_sym"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView15"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView16"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entry">

        <TextView
            android:id="@+id/date2"
            style="@style/body_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimary"
            android:text="15.09.2020" />

        <LinearLayout
            android:id="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <LinearLayout
                android:id="@+id/entries2"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/food2"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food" />

                <TextView
                    android:id="@+id/eqp2"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopping" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/values2"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fod_val2"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-300"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/eqp_val2"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-1,500"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/warning2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warn_sym2"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView152"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entry2">

        <TextView
            android:id="@+id/date3"
            style="@style/body_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimary"
            android:text="14.09.2020" />

        <LinearLayout
            android:id="@+id/content3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <LinearLayout
                android:id="@+id/entries3"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/food3"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food" />

                <TextView
                    android:id="@+id/gym"
                    style="@style/body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gym" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/values3"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fod_val3"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-400"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/gym_val3"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-6,000"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/warning3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warn_sym3"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/no_warn"
                    style="@style/body_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ic_baseline_add_24" />

</androidx.constraintlayout.widget.ConstraintLayout>